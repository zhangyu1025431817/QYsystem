<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_title"
        layout="@layout/view_toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_nav_bottom"
        android:layout_below="@id/ll_title"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RadioGroup
        android:id="@+id/rg_nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f9ff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/cb_home_icon"
            android:gravity="center"
            android:padding="10px"
            android:text="@string/home_system"
            android:textSize="20px" />

        <RadioButton
            android:id="@+id/rb_sell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/cb_sell_icon"
            android:gravity="center"
            android:padding="10px"
            android:text="@string/sell_system"
            android:textSize="20px" />

        <RadioButton
            android:id="@+id/rb_purchase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/cb_purchase_icon"
            android:gravity="center"
            android:padding="10px"
            android:text="@string/purchase_system"
            android:textSize="20px" />

        <RadioButton
            android:id="@+id/rb_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/cb_service_icon"
            android:gravity="center"
            android:padding="10px"
            android:text="@string/qy_service"
            android:textSize="20px" />
    </RadioGroup>

</com.zhy.autolayout.AutoRelativeLayout>