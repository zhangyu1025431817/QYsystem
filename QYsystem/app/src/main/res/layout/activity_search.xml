<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0px"
        app:contentInsetLeft="0px"
        app:contentInsetRight="0px"
        app:contentInsetStart="0px">

        <ImageButton
            android:id="@+id/btn_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_image_background_transparent_dark"
            android:src="@drawable/icon_back_home_gray" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="60px"
            android:background="@drawable/bg_layout_rectangle_circle_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="5px"
                android:drawableRight="@drawable/icon_drop_down"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="商品"
                android:textColor="#ccc"
                android:textSize="12sp" />

            <com.qy.business.view.ClearEditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/tv_type"
                android:background="@color/Transparent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="请输入关键字"
                android:textColorHint="#ccc"
                android:textColor="#333"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/btn_image_background_white_dark"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#333"
            android:textSize="16sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_hot"
        android:drawablePadding="10px"
        android:padding="34px"
        android:text="热门搜索"
        android:textColor="#ccc"
        android:textSize="24px" />

    <com.qy.business.view.flow.TagFlowLayout xmlns:zhy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_flow_layout_hot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        zhy:max_select="1">

    </com.qy.business.view.flow.TagFlowLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_history"
            android:drawablePadding="10px"
            android:padding="34px"
            android:text="历史搜索"
            android:textColor="#ccc"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="34px"
            android:text="清空"
            android:background="@drawable/btn_image_background_transparent_dark"
            android:textColor="#ccc"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.qy.business.view.flow.TagFlowLayout xmlns:zhy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_flow_layout_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        zhy:max_select="1">

    </com.qy.business.view.flow.TagFlowLayout>

</com.zhy.autolayout.AutoLinearLayout>